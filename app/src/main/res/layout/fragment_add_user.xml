<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F4EFD0"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="2dp"
    tools:context=".fragment.Fragment_add_user">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="240dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logo_add_user"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:id="@+id/in_MaTT">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ed_txtMaTT"
            android:hint="Tạo mã Thủ thư"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:id="@+id/in_HoTenTT">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ed_txtHoTenTT"
            android:hint="Họ tên"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:passwordToggleEnabled="true"
        android:id="@+id/in_PassTT">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ed_txtPassTT"
            android:inputType="textPassword"
            android:hint="Mật Khẩu"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_CreateTT"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Tạo"
            android:textStyle="bold"
            android:textSize="18dp"
            android:backgroundTint="#294CFF"
            />
        <Button
            android:id="@+id/btn_CancelCreateTT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:textSize="18dp"
            android:textStyle="bold"
            android:backgroundTint="#8A55646A"
            />
    </LinearLayout>
</LinearLayout>